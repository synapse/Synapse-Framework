{
    "attributes": {
        "name": "Edit",
        "action": "test",
        "enctype": "blabla",
        "style": "border: 1px solid red; background: orange"
    },
    "fieldsets": [{
        "label": "Some nice info",
        "attributes": {
            "class": "fieldset",
            "style": "margin: 20px; border: 2px solid green;"
        },
        "fields": [
            {
                "name": "myfield",
                "label": "Username",
                "type": "text",
                "message": "Invalid username",
                "filter": "string",
                "default": "Hello Word",
                "attributes": {
                    "class": "form-control",
                    "required": true
                },
                "options":{
                    "max": 10,
                    "labelclass": "some-nice-class-here"
                },
                "validate": [
                    {
                        "type": "email",
                        "message": "The entered username must be an email"
                    },
                    {
                        "type": "unique",
                        "message": "The entered username is already present in the database",
                        "table": "#__users",
                        "column": "username",
                        "self": "id"
                    }
                ]
            },
            {
                "name": "listField",
                "label": "Select",
                "type": "list",
                "default": "b",
                "value": "a",
                "attributes": {
                    "multiple": null
                },
                "options": {
                    "labelclass": "some-nice-class-here",
                    "items": [
                        {
                            "value": "",
                            "text": "-- select item --"
                        },
                        {
                            "value": "a",
                            "text": "A"
                        },
                        {
                            "value": "b",
                            "text": "B"
                        }
                    ]
                }
            },
            {
                "name": "textareaField",
                "label": "Textarea",
                "type": "textarea",
                "value": "cristi"
            }
        ]
    }]
}


















